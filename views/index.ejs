<!DOCTYPE html>
<html lang= "en">
<head>
    <meta charset = "UTF-8">
    <meta name = "viewport" content = "width=device-width">
    <title>Project</title>

    <style>

        .container {
        display: flex;
        justify-content: center;
        }

        body {
            font-family: Courier, monospace;
            text-align: center;
        }

        .cool-box {
            width: 200px; /* Set your desired width */
            height: 350px; /* Set your desired height */
            margin: 10px; /* Add margin for spacing between boxes */
            border: 1px solid #aba0a0;
            background-color: #e3e9ec; /* Box background color */
            color: #000000; /* Text color */
            padding: 20px; /* Padding inside the box */
            border-radius: 10px; /* Rounded corners */
            text-align: center;
}
        </style>
</head>
<body>

    <h1>
        HOME
    </h1>
    <nav>
        <% if (user) { %>
            <p> Logged in as <%= user %>  <a href="/logout">logout</a></p>
        <% } else { %>
            <a href="/login.html">Login</a>
        <% } %>
    </nav>
    <a href="/submit_form.html">submit form</a>
    <form action="/logData" method="get">
        <button type="submit">Log Data</button>
    </form>
    <div>
        <h2>Tickets</h2>
        <% if (tickets) { %>
            <ul>
            <div class = container>
                <% tickets.forEach(ticket => { %>
                        <div class="cool-box">
                            <p><%= ticket.title %></p>
                            <hr>
                            <p><%= ticket.body %></p>
                            <% if (ticket.image) { %>
                            <img src="data:image/jpeg;base64, <%= Buffer.from(ticket.image).toString('base64') %>" alt="Description of the image" height = "200" >
                            <% } %>
                        </div>
                <% }); %>
            </div>
            </ul>
        <% } else { %>
            <p>No tickets</p>
        <% } %>
      </div>

</body>
</html>